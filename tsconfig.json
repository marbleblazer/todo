{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ES2020",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "shared/*": ["shared/*"],
            "entities/*": ["entities/*"],
            "features/*": ["features/*"],
            "widgets/*": ["widgets/*"],
            "pages/*": ["pages/*"],
            "app/*": ["app/*"]
        }
    },
    "include": [
        "src",
        "vite-plugin-eslint.d.ts",
        "src/features/electrodesDisconnection/ui/ElectrodesDisconnectionSwitchBlock.tsx"
    ],
    "exclude": ["node_modules"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
