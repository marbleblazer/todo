{
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "printWidth": 120,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "always",
    "singleAttributePerLine": true,
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "(?=shared/*)",
        "(?=entities/*)",
        "(?=features/*)",
        "(?=widgets/*)",
        "(?=pages/*)",
        "(?=@/app/*)",
        "^\\."
    ],
    "importOrderSeparation": true
}
